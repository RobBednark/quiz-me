    "version": "0.2.0",
    "configurations": [

        {
            "name": "1) runserver",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:80"
            ],
            "django": true,
            "justMyCode": true,
            "autoStartBrowser": false
        },
        {
            "name": "2) tests --failfast",
            "type": "debugpy",
            "request": "launch",
            "program": "./manage.py",
            "env": {
                "QM_ENGINE": "sqlite"
            },
            "args": [
                 "test",
                 "--failfast"
            ]
            "justMyCode": true,
            "autoStartBrowser": false
        },
        {
            "name": "3) tests test_user_with_one_question",
            "type": "debugpy",
            "request": "launch",
            "program": "./manage.py",
            "env": {
                "QM_DEBUG_PRINT": True,
                "QM_ENGINE": "sqlite",
                "QM_TEST_DB": "sqlite.db"
            },
            "args": [
                 "test",
                 "--failfast",
                 "--no-input",
                 "-k",
                 "test_multiple_tags"
            ]
            "justMyCode": true,
            "autoStartBrowser": false
        }
    ]
}