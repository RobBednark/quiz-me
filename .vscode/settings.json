      "sash.hoverBorder": "#767b9f",
      "sideBar.border": "#767b9f",
      "statusBar.background": "#5d6285",
      "statusBar.border": "#5d6285",
      "statusBar.foreground": "#e7e7e7",
      "statusBarItem.hoverBackground": "#767b9f",
      "statusBarItem.remoteBackground": "#5d6285",
      "statusBarItem.remoteForeground": "#e7e7e7",
      "tab.activeBorder": "#767b9f",
      "titleBar.activeBackground": "#5d6285",
      "titleBar.activeForeground": "#e7e7e7",
      "titleBar.border": "#5d6285",
      "titleBar.inactiveBackground": "#5d628599",
